<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#010617"
    tools:context=".main.BreakOutFragment">


    <VideoView
        android:id="@+id/vv_gameplayBO"
        android:layout_width="380dp"
        android:layout_height="700dp"
        android:layout_gravity="center" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:alpha="0.5"
        android:scaleType="fitXY"
        android:src="@drawable/fondoperfil" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:translationY="80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/audiowide"
            android:text="BREAKOUT"
            android:textColor="#56F9F9"
            android:textSize="40dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnJugar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:alpha="0.5"
            android:backgroundTint="#56F9F9"
            android:fontFamily="@font/audiowide"
            android:text="PLAY"
            android:textColor="#010617"
            android:textStyle="bold"
            android:translationY="200dp" />

    </LinearLayout>


</FrameLayout>