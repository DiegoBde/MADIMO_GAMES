<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#010617"
    tools:context=".main.GatoFragment">

    <VideoView
        android:id="@+id/vv_gameplayGato"
        android:layout_width="380dp"
        android:layout_height="700dp"
        android:layout_gravity="center" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:alpha="0.5"
        android:scaleType="fitXY"
        android:src="@drawable/fondoperfil" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:orientation="vertical"
        android:translationY="80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/audiowide"
            android:text="GATO"
            android:textColor="#56F9F9"
            android:textSize="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:translationY="275dp">

            <ImageButton
                android:id="@+id/btn_jugarGato"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:alpha="0.75"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/playbutton" />

            <ImageButton
                android:id="@+id/btn_scoreGato"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:alpha="0.75"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/scorebutton"
                android:translationY="25dp" />
        </LinearLayout>


    </LinearLayout>

</FrameLayout>